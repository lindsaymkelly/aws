<div id="index-image" class="container-fluid">
  <div style="padding-top:3%;">
    <%=image_tag 'aws_logo_white' %>
  </div>
  <div id="index-text" class="container-fluid text-center">
    <h2 style="font-size: 3em;"> Education today in order to focus on tomorrow. </h2>
    <p style="font-size: 1.5em;"> Local education on a global scale. </p>
  </div>
</div>
<div style="background:linear-gradient(225deg, #BADEF3 0%, #02ABA7 100%);color:#FFFFFF;" class="container-fluid">
  <div style="padding-bottom:3%;" class="container text-center">
    <h1> LATEST NEWS </h1>
  </div>
  <% if @news %>
    <div class="container">
      <% @news.each do |story| %>
        <div style="padding-bottom:3%;" class="container">
          <div id="news-image" class="col-md-2">
            <%= image_tag story.image.url(:medium) %>
          </div>
          <div class="col-md-10">
            <% if story.date %>  
              <h5 style="font-size: 18.5px;"><%=story.title.upcase%>: <%=story.date.strftime('%e %B').upcase%></h5>
            <% else %>
              <h5 style="font-size: 18.5px;"><%=story.title.upcase %></h5>
            <% end %> 
            <p style="font-size: 16px;"><%=story.description%></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
