<div class="container">
  <div class="col-sm-offset-2 col-sm-10">
    <h2> Add News Update: </h2>
  </div>
  <%= form_for @news_update, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%=f.label 'Title:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_field :title, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Description:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_area :description, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Date (if applicable):', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.date_field :date, :class =>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Add Image:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.file_field :image %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%=f.submit "Add News Update", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>