<h2> Edit News Update: </h2>
<%= form_for @news_update, url: news_update_path(@news_update), method: 'put' do |f| %>
  <%=f.label 'Title:' %>
  <%=f.text_field :title %>
  <br>
  <%=f.label 'Description:' %>
  <%=f.text_area :description %>
  <br>
  <%=f.label 'Date (if applicable):' %>
  <%=f.date_field :date %>
  <br>
  <% if @news_update.image.exists? %>
    <%= image_tag @news_update.image.url(:thumb) %>
  <% end %>
  <%=f.file_field :image %>
  <br>
  <%=f.label 'Current News Story?' %>
  <%=f.check_box(:active) %>
  <br>
  <%=f.submit "Edit News Update" %>
<% end %>