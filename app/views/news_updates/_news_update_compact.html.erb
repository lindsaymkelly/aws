<tr>
  <td><%=news_update.title%></td>
  <td><%=news_update.description%></td>
  <td><%=news_update.date ? news_update.date.strftime("%b %d, %Y") : " "%></td>
  <td><%=news_update.active%></td>
  <td><%= link_to "Edit", edit_news_update_path(news_update) %></td>
  <td><%= link_to "Delete", news_update, method: :delete, data: {confirm: "Are you sure you want to delete this news update?"}%></td>
</tr>