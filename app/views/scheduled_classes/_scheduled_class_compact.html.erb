<tr>
  <td><%=scheduled_class.name%></td>
  <td><%=scheduled_class.start_date.strftime("%b %d, %Y")%></td>
  <td><%=scheduled_class.end_date.strftime("%b %d, %Y")%></td>
  <td><%=scheduled_class.time.strftime("%I:%M %p")%></td>
  <td><%=truncate(scheduled_class.about, length:50)%></td>
  <td><%=scheduled_class.instructor%></td>
  <td class="text-center"><%= link_to "Edit", edit_scheduled_class_path(scheduled_class), :class => "btn btn-info btn-sm" %></td>
  <td class="text-center"><%= link_to "Delete", scheduled_class, method: :delete, data: {confirm: "Are you sure you want to delete this scheduled class?"}, :class => "btn btn-danger btn-sm" %></td>
</tr>