<div class="container">
  <div class="col-sm-offset-2 col-sm-10">
    <h2> Edit Staff Member: </h2>
  </div>
  <%= form_for @staff_member, url: staff_member_path(@staff_member), method: 'put', html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%=f.label 'Name:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Bio:', :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%=f.text_area :bio, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <% if @staff_member.image.exists? %>
        <%= image_tag @staff_member.image.url(:thumb), :class => "col-sm-2" %>
      <% end %>
      <div class="col-sm-10">
        <%=f.file_field :image %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Current Employee?', :class => "col-sm-2 control-label" %>
      <div class="col-sm-2">
        <%=f.check_box(:active) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%=f.submit "Edit Staff Member", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>