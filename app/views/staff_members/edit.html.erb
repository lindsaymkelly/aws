<h2> Edit Staff Member: </h2>
<%= form_for @staff_member, url: staff_member_path(@staff_member), method: 'put' do |f| %>
  <%=f.label 'Name:' %>
  <%=f.text_field :name %>
  <br>
  <%=f.label 'Bio:' %>
  <%=f.text_area :bio %>
  <br>
  <% if @staff_member.image.exists? %>
    <%= image_tag @staff_member.image.url(:thumb) %>
  <% end %>
  <%=f.file_field :image %>
  <br>
  <%=f.label 'Current Employee?' %>
  <%=f.check_box(:active) %>
  <%=f.submit "Edit Staff Member" %>
<% end %>